
<div style="display:flex; flex-direction:row; @(Style); justify-content:center; ">
	<div style="display:flex; flex-direction:column; justify-content:center;">
		<div style="position: relative; height: @(Size + Top)px; width: @(Size)px">
			<MudAvatar Variant="Variant.Text" style="@($"top: {Top}px; width: {Size}px; height: {Size}px; position: absolute")">
				<MudImage Style="position: relative; top: 40px" Fluid=true Src="images/PaulMaget.jpg"></MudImage>
			</MudAvatar>
		</div>
		@ChildContent
	</div>
</div>

@code {
	[Parameter]
	public int Top { get; set; } = -140;
	[Parameter]
	public int Size { get; set; } = 200;
	[Parameter]
	public string Style { get; set; } = "";
	[Parameter]
	public RenderFragment? ChildContent { get; set; }
}
